<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/notif_song_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/ll_custom_button"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip" >

        <ImageButton
            android:id="@+id/btn_notif_play"
            android:layout_width="54dp"
            android:layout_height="54dp"
       
            android:contentDescription="播放" />

        <ImageButton
            android:id="@+id/btn_notif_next"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_toRightOf="@id/btn_notif_play"
            android:background="@drawable/next_bt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:contentDescription="下一首" />
         <ImageButton
            android:id="@+id/btn_notif_exit"
            android:layout_width="28dp"
            android:layout_height="28dp"
          
            android:background="@drawable/icn_close"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toLeftOf="@id/ll_custom_button"
        android:layout_toRightOf="@id/notif_song_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_notif_song_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="title"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_notif_song_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="content"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>